<Window x:Class="VideoScreenSaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoScreenSaver"
        mc:Ignorable="d"
        Title="MainWindow" 
        Background="Black"
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        WindowStyle="None" 
        Cursor="None" 
        Focusable="False" 
        Topmost="True"
        Closing="Window_Closing">
    <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
        <MediaElement x:Name="MediaPlayer" SnapsToDevicePixels="True" Cursor="None" LoadedBehavior="Manual" Volume="1" />
    </Grid>
</Window>
